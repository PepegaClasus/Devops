check process haproxy.service with pidfile /var/run/haproxy.pid
  group www
  group haproxy
  start program = "/etc/init.d/haproxy_start"
  stop program = "/etc/init.d/haproxy_stop"
  depend haproxy_bin
  depend haproxy_rc


check file haproxy_bin
  group haproxy
  include /etc/monit/templates/rootbin

check file haproxy_rc
  group haproxy
  include /etc/monit/templates/rootbin
